<%- include ../ejs_files/header.ejs %>
<%- include ../ejs_files/main_nav.ejs %>
<!-- Content for the Edit page-->
<!--allows the user to edit any data-->
<div class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="post">
            <div class="form-group">
                <label for="MemberNameTextfield"> Member Name </label>
                <input type="text" class="form-control"
                id="MemberNameTextfield"
                placeholder="Enter a new Task"
                name="MemberName" 
                value="<%= Task.MemberName %>"
                required>
            </div>
            
            <div class="form-group">
                <label for="MemberIDTextfield"> Member ID </label>
                <input type="text" class="form-control"
                id="MemberIDTextfield"
                placeholder="Enter the assigned date"
                name="MemberID"
                value="<%= Task.MemberID %>"
                required>
            </div>
            
            <div class="form-group">
                <label for="ClassDateTextfield"> Class Date </label>
                <input type="text" class="form-control"
                id="ClassDateTextfield"
                placeholder="Enter a the due date"
                name="ClassDate"
                value="<%= Task.ClassDate %>"
                required>
            </div>
            
            <div class="form-group">
                <label for="ClassTextfield"> Class </label>
                <textarea type="text" class="form-control"
                id="ClassTextfield"
                placeholder="Describe your task"
                name="Class" required>
                <%= Task.Class %>
                </textarea>
            </div>
            <br>
            <button class="btn btn-warning" type="submit">
                <i class="fas fa-check"></i>
            </button>

            <a href="/tasks" class="btn btn-warning">
            <i class="fas fa-x"></i></a>
        </form>
    </div>
    </div>
</div>
<%- include ../ejs_files/bottom_nav.ejs %>
<%- include ../ejs_files/footer.ejs %>